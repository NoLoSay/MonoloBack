model Logs {
  id        Int          @id @default(autoincrement())
  uuid      String       @unique @default(uuid())
  criticity LogCriticity @default(Info)
  context   String?
  exception String?
  content   String?
  stack     String?
  message   String?
}

enum LogCriticity {
  Info
  Low
  Medium
  High
  Critical
}
